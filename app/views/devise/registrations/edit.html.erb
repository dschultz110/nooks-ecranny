<section class="section">
  <div class="container">
    <h2 class="title is-2">Edit Your Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <h4 class="title is-4">Address Details</h4>

      <div class="field">
        <%= f.label :street_address %><br />
        <%= f.text_field :street %>
      </div>

      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </div>

      <div class="field">
        <%= f.label :postal_code %><br />
        <%= f.text_field :postal %>
      </div>

      <div class="field">
        <%= f.label :province %><br />
        <%= f.select :province_id, @provinces %>
      </div>

      <h4 class="title is-4">Change Your Password</h4>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <h4 class="title is-5">Please enter your current password to confirm your changes</h4>

      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", :class => 'button is-danger' %>
      </div>
      <br/>
      <%= link_to "Back", :back %>
    <% end %>
    <hr />
    <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'button' %></p>
  </div>
</section>