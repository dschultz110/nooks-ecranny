<div class="column is-2">
  <%= link_to(item) do %>
    <div class="card">
      <div class="card-image">
        <figure class="image is-500x500">
          <img src="<%= ItemVariant.find_by(item: item).image %>">
        </figure>
      </div>
      <div class="card-content">
        <p class="title is-4">
          <%= link_to item.name.titleize, item %>
        </p>
        <p><%= item.price %> bells</p><br>
        <%= link_to "Add to Cart", add_to_cart_path(ItemVariant.find_by(item: item).id), method: :post, class: "button is-primary" %>
        <% %>
      </div>
    </div>
  <% end %>
</div>